<% @posts.each do |post| %>
  <%= post.user.nickname %>
      <li class='list'>
        <%= link_to post_path(post.id) do %>
        <div class='item-img-content'>
           <%= image_tag post.image.variant(resize: '500x500'), class: "post-img" if post.image.attached? %>
        
        </div>
        <td>
          <div id="star-rate<%= post.id%>"> </td>
          <script>
            $('#star-rate<%= post.id %>').empty();
            $('#star-rate<%= post.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              half      : false,
              readOnly: true,
              score: <%= post.star %>,
            });
          </script>
          </div>    
        <div class='post-info'>
          <h3 class='post-name'>
            <%= post.name %>
          </h3>
          <div class='post-price'>
            <span><%= post.rebyu %><br><%= post.category.name %></span>
            <div class='star-btn'>
             </div>
            <li>
            <%= link_to 'コメント', post_path(post.id), method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == post.user_id %>
            <li>
              <%= link_to '編集', edit_post_path(post.id), method: :get %>
            </li>
            <li>
              <%= link_to '削除', post_path(post.id), method: :delete %>
            </li>
          <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </li>
       <% end %>
        <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <span><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                 <div><%= link_to "マイページ", user_path(current_user.id), class: "text-white" %></div> 
              
              </li>
            </ul>
          </span>
       
      <% end %>